---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "SAUFEX is an EU-funded initiative combating foreign information manipulation and interference through research, education, and collaboration.",
  image = "/images/og-image.png"
} = Astro.props;

// Get current path for active nav state and canonical URL
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | SAUFEX</title>
  <meta name="description" content={description}>

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:title" content={`${title} | SAUFEX`}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:site_name" content="SAUFEX">
  <meta property="og:image" content={new URL(image, Astro.site)}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:locale" content="en_US">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={`${title} | SAUFEX`}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(image, Astro.site)}>

  <!-- Additional SEO -->
  <meta name="author" content="SAUFEX Consortium">
  <meta name="robots" content="index, follow">
  <meta name="theme-color" content="#6b4ce6">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/logo-primary.png">
  <link rel="apple-touch-icon" href="/images/logo-primary.png">

  <!-- Styles (fonts loaded via CSS) -->
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <!-- Header -->
  <header class="header">
    <div class="container header__inner">
      <a href="/" class="header__logo">
        <img src="/images/logo-primary.png" alt="">
        <span>SAUFEX</span>
      </a>

      <!-- Mobile menu button -->
      <button class="nav__toggle" id="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
        <svg class="nav__toggle-open" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 12h18M3 6h18M3 18h18"></path>
        </svg>
        <svg class="nav__toggle-close" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Navigation -->
      <nav class="nav" id="nav">
        <a href="/insights" class:list={[{ active: currentPath.startsWith('/insights') }]}>Insights</a>
        <a href="/research" class:list={[{ active: currentPath === '/research' }]}>Research</a>
        <a href="/tools" class:list={[{ active: currentPath === '/tools' }]}>Tools</a>
        <a href="/media" class:list={[{ active: currentPath === '/media' }]}>Media</a>
        <a href="/partners" class:list={[{ active: currentPath === '/partners' }]}>Partners</a>
        <a href="/about" class:list={[{ active: currentPath === '/about' }]}>About</a>
        <a href="https://emod-platform.vercel.app" target="_blank" class="nav__emod">EMOD</a>
      </nav>
    </div>
  </header>

  <script>
    const navToggle = document.getElementById('nav-toggle');
    const nav = document.getElementById('nav');

    navToggle?.addEventListener('click', () => {
      const isOpen = nav?.classList.toggle('nav--open');
      navToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      document.body.classList.toggle('nav-open', isOpen);
    });

    // Close nav when clicking a link
    nav?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        nav.classList.remove('nav--open');
        navToggle?.setAttribute('aria-expanded', 'false');
        document.body.classList.remove('nav-open');
      });
    });
  </script>

  <main id="main-content">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer__inner">
        <div class="footer__brand">
          <img src="/images/logo-primary.png" alt="SAUFEX" style="height: 40px; margin-bottom: 1rem;">
          <p>Combating information manipulation through research, education, and collaboration.</p>
        </div>
        <div class="footer__links">
          <div class="footer__col">
            <h4>Explore</h4>
            <a href="/insights">Insights</a>
            <a href="/research">Research</a>
            <a href="/tools">Tools</a>
            <a href="/media">Media</a>
            <a href="/partners">Partners</a>
            <a href="/about">About</a>
            <a href="https://emod-platform.vercel.app" target="_blank">EMOD Platform</a>
          </div>
          <div class="footer__col">
            <h4>Connect</h4>
            <a href="https://www.linkedin.com/company/saufex" target="_blank">LinkedIn</a>
            <a href="https://soundcloud.com/saufex" target="_blank">Podcast</a>
            <a href="https://www.youtube.com/channel/UCJpiyIP4lWTgpqgJE830Kqw" target="_blank">YouTube</a>
            <a href="https://discord.gg/bvaGd5rahu" target="_blank">Discord</a>
            <a href="mailto:info@saufex.eu">Contact</a>
          </div>
        </div>
      </div>
      <div class="footer__bottom">
        <p class="footer__legal">
          Funded by the European Union. Views expressed are those of the authors only.
        </p>
        <div class="footer__eu">
          <img src="/images/eu-funded.svg" alt="Funded by the European Union">
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
