---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.data.slug || post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const formattedDate = new Date(post.data.date).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<BaseLayout title={post.data.title} description={post.data.description || `Read ${post.data.title} on SAUFEX`}>

  <article>
    <!-- Article Header -->
    <header class="article-header">
      <div class="container container--narrow">
        <a href="/insights" class="article-header__back">← Back to Insights</a>
        <h1 class="article-header__title">{post.data.title}</h1>
        <div class="article-header__meta">
          {post.data.author && <span>By {post.data.author}</span>}
          <span>•</span>
          <span>{formattedDate}</span>
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <div class="article-content">
      <div class="container container--narrow">
        <Content />
      </div>
    </div>

    <!-- Back to insights -->
    <div class="article-footer">
      <div class="container container--narrow">
        <a href="/insights" class="article-footer__link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          All Insights
        </a>
      </div>
    </div>
  </article>

</BaseLayout>

<style>
  /* Article Header */
  .article-header {
    padding: calc(80px + var(--space-2xl)) 0 var(--space-lg);
    border-bottom: 1px solid rgba(0,0,0,0.1);
    margin-bottom: var(--space-xl);
  }

  .article-header__back {
    display: inline-block;
    font-size: 0.875rem;
    color: var(--color-muted);
    margin-bottom: var(--space-lg);
    transition: color 0.2s;
  }

  .article-header__back:hover {
    color: var(--color-purple);
  }

  .article-header__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-md);
    max-width: 20ch;
  }

  .article-header__meta {
    display: flex;
    gap: var(--space-sm);
    color: var(--color-muted);
    font-size: 0.9rem;
  }

  /* Article Content */
  .article-content {
    padding-bottom: var(--space-2xl);
  }

  .article-content :global(p) {
    margin-bottom: 1.5em;
    line-height: 1.8;
  }

  .article-content :global(h2) {
    font-size: 1.75rem;
    margin: var(--space-lg) 0 var(--space-xs);
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    margin: var(--space-md) 0 var(--space-xs);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.5em;
    padding-left: var(--space-lg);
  }

  .article-content :global(li) {
    margin-bottom: 0.5em;
    line-height: 1.7;
  }

  .article-content :global(blockquote) {
    border-left: 3px solid var(--color-purple);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--color-muted);
  }

  .article-content :global(a) {
    color: var(--color-purple);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .article-content :global(a:hover) {
    color: var(--color-purple-light);
  }

  .article-content :global(img) {
    border-radius: 8px;
    margin: var(--space-lg) 0;
    max-width: 100%;
    height: auto;
  }

  .article-content :global(pre) {
    background: var(--color-dark);
    color: var(--color-light);
    padding: var(--space-md);
    border-radius: 8px;
    overflow-x: auto;
    margin: var(--space-lg) 0;
  }

  .article-content :global(code) {
    font-size: 0.9em;
  }

  /* Hide the boilerplate header in old posts */
  .article-content :global(a[href="https://saufex.eu/"]:first-child),
  .article-content :global(img[alt="Logo"]) {
    display: none;
  }

  /* Article Footer */
  .article-footer {
    padding: var(--space-xl) 0 var(--space-2xl);
    border-top: 1px solid rgba(0,0,0,0.08);
  }

  .article-footer__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-purple);
    font-weight: 600;
    transition: gap 0.2s;
  }

  .article-footer__link:hover {
    gap: var(--space-sm);
  }
</style>
