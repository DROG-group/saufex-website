---
import BaseLayout from '../layouts/BaseLayout.astro';

const partners = [
  {
    name: "PORT Łukasiewicz",
    country: "Poland",
    url: "https://port.org.pl/",
    description: "The Polish Center for Technology Development is a leading research and development organization focused on advancing scientific innovation. As part of the Łukasiewicz Research Network, PORT specializes in cutting-edge research across biotechnology, material sciences, and digital technologies."
  },
  {
    name: "DROG",
    country: "Netherlands",
    url: "https://drog.group/",
    description: "A leading organisation in the fight against disinformation, specialising in innovative educational tools and strategies to build resilience against fake news. DROG creates interactive experiences that empower individuals to recognise and resist manipulation."
  },
  {
    name: "Faktabaari",
    country: "Finland",
    url: "https://faktabaari.fi/",
    description: "A Finnish fact-checking service dedicated to promoting accurate information and combating misinformation in public discourse. Faktabaari provides reliable, evidence-based fact-checks and engages with the public through educational initiatives."
  },
  {
    name: "Debunk.org",
    country: "Lithuania",
    url: "https://debunk.org/",
    description: "A pioneering organisation dedicated to identifying, analysing, and combating disinformation across Europe. Through cutting-edge tools and collaborative efforts, Debunk.org plays a crucial role in safeguarding democratic values."
  },
  {
    name: "ISP PAN",
    country: "Poland",
    url: "https://politic.edu.pl/",
    description: "The Institute of Political Studies of the Polish Academy of Sciences, established in 1990 to foster innovative research at the intersection of East and West. ISPPAN addresses regional and global political shifts, focusing on international security and European integration."
  },
  {
    name: "University of Warsaw",
    country: "Poland",
    url: "https://www.uw.edu.pl/",
    description: "Poland's largest and most prestigious university, renowned for excellence in education and research. Founded in 1816, the university combines a rich academic tradition with cutting-edge research to address global challenges."
  }
];
---

<BaseLayout title="Partners" description="The SAUFEX consortium brings together leading organizations from across Europe.">

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <span class="page-header__label">Consortium</span>
      <h1 class="page-header__title">Partners</h1>
      <p class="page-header__subtitle">
        Six organizations united in research, education, and civil society from across Europe.
      </p>
    </div>
  </section>

  <!-- Partner Grid -->
  <section class="content-section">
    <div class="container">
      <div class="partner-grid">
        {partners.map((partner) => (
          <a href={partner.url} target="_blank" class="partner-card">
            <div class="partner-card__header">
              <h3 class="partner-card__name">{partner.name}</h3>
              <span class="partner-card__country">{partner.country}</span>
            </div>
            <p class="partner-card__description">{partner.description}</p>
            <span class="partner-card__link">
              Visit website
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                <polyline points="15 3 21 3 21 9"/>
                <line x1="10" y1="14" x2="21" y2="3"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Collaboration Section -->
  <section class="media-section">
    <div class="container">
      <div class="collab-header">
        <h2>Collaborate With Us</h2>
        <p>There are many ways to get involved with SAUFEX</p>
      </div>

      <div class="collab-grid">
        <div class="collab-card">
          <div class="collab-card__icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3 class="collab-card__title">Join the Conversation</h3>
          <p class="collab-card__description">Connect with researchers and practitioners on LinkedIn.</p>
          <a href="https://www.linkedin.com/company/saufex" target="_blank" class="collab-card__link">Follow on LinkedIn →</a>
        </div>

        <div class="collab-card">
          <div class="collab-card__icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 20h9"></path>
              <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
            </svg>
          </div>
          <h3 class="collab-card__title">Contribute Content</h3>
          <p class="collab-card__description">Share your expertise through blog posts and articles.</p>
          <a href="mailto:info@saufex.eu" class="collab-card__link">Get in Touch →</a>
        </div>

        <div class="collab-card">
          <div class="collab-card__icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
          </div>
          <h3 class="collab-card__title">Partner With Us</h3>
          <p class="collab-card__description">Organizations can collaborate on research and policy.</p>
          <a href="mailto:info@saufex.eu" class="collab-card__link">Explore Partnership →</a>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-header {
    padding: calc(80px + var(--space-2xl)) 0 var(--space-xl);
    border-bottom: 1px solid rgba(0,0,0,0.08);
  }

  .page-header__label {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-purple);
    margin-bottom: var(--space-md);
  }

  .page-header__label::before {
    content: '';
    width: 8px;
    height: 8px;
    background: var(--color-gold);
    border-radius: 50%;
  }

  .page-header__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--space-sm);
  }

  .page-header__subtitle {
    font-size: 1.1rem;
    color: var(--color-muted);
    max-width: 50ch;
  }

  .partner-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: var(--space-md);
  }

  .partner-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-lg);
    background: var(--color-light);
    border: 1px solid rgba(0,0,0,0.08);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s;
  }

  .partner-card:hover {
    border-color: var(--color-purple);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(107, 76, 230, 0.1);
  }

  .partner-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-sm);
  }

  .partner-card__name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-dark);
    margin: 0;
  }

  .partner-card__country {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-muted);
    background: rgba(0,0,0,0.05);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .partner-card__description {
    font-size: 0.9rem;
    color: var(--color-muted);
    flex: 1;
    margin-bottom: var(--space-md);
  }

  .partner-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-purple);
    transition: gap 0.2s;
  }

  .partner-card:hover .partner-card__link {
    gap: var(--space-sm);
  }

  .collab-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .collab-header h2 {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    margin-bottom: var(--space-sm);
  }

  .collab-header p {
    color: var(--color-muted);
  }

  .collab-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }

  .collab-card {
    background: var(--color-light);
    padding: var(--space-lg);
    border-radius: 16px;
    text-align: center;
  }

  .collab-card__icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(107, 76, 230, 0.1);
    border-radius: 12px;
    color: var(--color-purple);
    margin: 0 auto var(--space-md);
  }

  .collab-card__title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    margin-bottom: var(--space-xs);
  }

  .collab-card__description {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-bottom: var(--space-md);
  }

  .collab-card__link {
    color: var(--color-purple);
    font-weight: 600;
    font-size: 0.9rem;
  }

  @media (max-width: 1024px) {
    .collab-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .partner-grid,
    .collab-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
